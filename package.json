{
	"name": "todo_sorcery_backend",
	"version": "0.1.0",
	"description": "A backend for Todo App",
	"author": "Do Dinh Thy Son",
	"repository": "",
	"license": "GPL-3.0-only",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsdown",
		"start:dev": "node --import=tsx --watch src/index.ts & pnpm run dev:css",
		"dev:css": "postcss ./public/styles/tailwind.css -o ./public/styles/style.css -w",
		"start:prod": "node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "8.1.0",
		"cors": "2.8.5",
		"dotenv": "17.2.1",
		"eta": "^4.4.1",
		"express": "5.1.0",
		"express-rate-limit": "8.0.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"pg": "^8.16.3",
		"pino": "10.1.0",
		"pino-http": "11.0.0",
		"swagger-ui-express": "5.0.1",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/cors": "2.8.19",
		"@types/ejs": "^3.1.5",
		"@types/express": "5.0.3",
		"@types/pg": "^8.15.6",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "4.0.14",
		"autoprefixer": "^10.4.22",
		"drizzle-kit": "^0.31.7",
		"pino-pretty": "13.1.1",
		"supertest": "7.1.4",
		"tsdown": "^0.17.0-beta.5",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "4.0.14"
	},
	"tsdown": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.14.0"
}
